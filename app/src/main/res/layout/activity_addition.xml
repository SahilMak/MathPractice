<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sahil.mathpractice.Addition"
    android:background="#FFFF00"
    android:id="@+id/addActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_wrong"
        android:id="@+id/rightOrWrong"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign"
        android:id="@+id/plusSign"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number1"
        android:id="@+id/numberOne"
        android:ems="4"
        android:gravity="center"
        android:inputType="number"
        android:layout_alignBaseline="@+id/plusSign"
        android:layout_alignBottom="@id/plusSign"
        android:layout_toLeftOf="@+id/plusSign"
        android:layout_toStartOf="@+id/plusSign"
        tools:ignore="TextViewEdits" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number2"
        android:id="@+id/numberTwo"
        android:ems="4"
        android:gravity="center"
        android:inputType="number"
        android:layout_alignBaseline="@+id/plusSign"
        android:layout_alignBottom="@id/plusSign"
        android:layout_toRightOf="@+id/plusSign"
        android:layout_toEndOf="@+id/plusSign"
        tools:ignore="TextViewEdits" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="6"
        android:gravity="center"
        android:id="@+id/answer"
        android:layout_below="@+id/numberOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="@string/hint" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:id="@+id/submitButton"
        android:layout_below="@+id/answer"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/btn_default"
        android:focusable="true"
        android:clickable="true"
        style="android/buttonStyle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_button"
        android:id="@+id/nextButton"
        android:layout_below="@+id/submitButton"
        android:layout_alignLeft="@+id/submitButton"
        android:layout_alignStart="@+id/submitButton"
        android:layout_alignRight="@+id/submitButton"
        android:layout_alignEnd="@+id/submitButton"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:drawable/btn_default"
        style="android/buttonStyle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:src="@drawable/addition" />
</RelativeLayout>
